class Solution {
    public String simplifyPath(String path) {
        Stack<String> st = new Stack<>();
        String[] arr= path.split("/");

        for (String dir : arr) {
            if (dir.equals("") || dir.equals(".")) {
                continue;
            }
            if (dir.equals("..")) {
                if (!st.isEmpty()) {
                    st.pop();
                }
            } else {
                st.push(dir);
            }
        }
        StringBuilder ans = new StringBuilder();
        for (String dir : st) {
             ans.append("/").append(dir);
        }

        if ( ans.length() == 0) {
            return "/";
        } else {
            return  ans.toString();
        }
    }
}
